@page
@model CarStore.WebUI.Pages.Users.RegisterModel
@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}

<div class="min-h-[70vh] flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-md animate__animated animate__fadeIn">
        <!-- Back Link -->
        <div class="mb-6">
            <a asp-page="/Index" class="inline-flex items-center text-gray-600 hover:text-blue-600 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i> Quay lại trang chủ
            </a>
        </div>

        <!-- Register Card -->
        <div class="bg-white rounded-xl shadow-xl p-8">
            <div class="text-center mb-8">
                <div class="bg-green-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-user-plus text-3xl text-white"></i>
                </div>
                <h1 class="text-3xl font-bold text-gray-800">Đăng Ký Tài Khoản</h1>
                <p class="text-gray-600 mt-2">Tạo tài khoản để bắt đầu mua xe</p>
            </div>
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded" role="alert"></div>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="Input.FullName" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-user mr-2 text-gray-500"></i>Họ và tên
                        </label>
                        <input asp-for="Input.FullName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all outline-none" placeholder="Nguyễn Văn A" />
                        <span asp-validation-for="Input.FullName" class="text-sm text-red-600 mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Email" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-envelope mr-2 text-gray-500"></i>Email
                        </label>
                        <input asp-for="Input.Email" type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all outline-none" placeholder="your@email.com" />
                        <span asp-validation-for="Input.Email" class="text-sm text-red-600 mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Password" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-lock mr-2 text-gray-500"></i>Mật khẩu
                        </label>
                        <input asp-for="Input.Password" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all outline-none" placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="text-sm text-red-600 mt-1 block"></span>
                        <p class="text-xs text-gray-500 mt-1">Mật khẩu tối thiểu 6 ký tự</p>
                    </div>
                </div>

                <button type="submit" class="w-full mt-6 bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg">
                    <i class="fas fa-user-plus mr-2"></i>Đăng Ký
                </button>
            </form>

            <!-- Login Link -->
            <div class="text-center mt-6 pt-6 border-t border-gray-200">
                <p class="text-gray-600">
                    Đã có tài khoản?
                    <a asp-page="./Login" class="font-bold text-blue-600 hover:text-blue-700 hover:underline">
                        Đăng nhập ngay
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

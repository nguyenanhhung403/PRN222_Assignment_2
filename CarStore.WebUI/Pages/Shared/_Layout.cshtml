<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarStore</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
      /* Stock update animation */
      .stock-updated {
        animation: pulse 1s ease-in-out;
      }
      @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); color: #10b981; font-weight: bold; }
      }
      /* Toast container positioning */
      .toast-container {
        position: fixed;
        top: 80px;
        right: 20px;
        z-index: 9999;
      }
      /* Notification badge */
      .notification-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background-color: #ef4444;
        color: white;
        border-radius: 50%;
        padding: 2px 6px;
        font-size: 0.75rem;
        font-weight: bold;
      }
    </style>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">
    <header class="sticky top-0 z-50 bg-white shadow-lg">
        <nav class="bg-gradient-to-r from-blue-600 via-blue-700 to-indigo-700">
            <div class="container mx-auto px-6 py-4 flex justify-between items-center">
                <a class="text-2xl md:text-3xl font-extrabold text-white flex items-center space-x-2 hover:scale-105 transition-transform" asp-area="" asp-page="/Index">
                    <i class="fas fa-car-side text-3xl"></i>
                    <span>CarStore</span>
                </a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="relative ml-4">
                        <button id="notification-button" class="text-white hover:text-blue-200 focus:outline-none relative">
                            <i class="fas fa-bell text-2xl"></i>
                            <span id="notification-badge" class="notification-badge" style="display: none;">0</span>
                        </button>
                    </div>
                }
                <div class="flex items-center">
                    <div class="hidden md:flex items-center space-x-6">
                         <a asp-area="" asp-page="/Index" class="text-white hover:text-blue-200 font-semibold transition-colors">
                             <i class="fas fa-home mr-1"></i>Trang Chủ
                         </a>
                         <a asp-area="" asp-page="/Cars/Index" class="text-white hover:text-blue-200 font-semibold transition-colors">
                             <i class="fas fa-car mr-1"></i>Bộ Sưu Tập
                         </a>
                         <partial name="_LoginPartial" />
                    </div>
                    <div class="md:hidden">
                        <button id="mobile-menu-button" class="text-white hover:text-blue-200 focus:outline-none">
                            <i class="fas fa-bars text-2xl"></i>
                        </button>
                    </div>
                </div>
            </div>
             <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden bg-blue-800 px-6 pb-4">
                <a asp-area="" asp-page="/Index" class="block py-3 text-white hover:text-blue-200 border-b border-blue-700">
                    <i class="fas fa-home mr-2"></i>Trang Chủ
                </a>
                <a asp-area="" asp-page="/Cars/Index" class="block py-3 text-white hover:text-blue-200 border-b border-blue-700">
                    <i class="fas fa-car mr-2"></i>Bộ Sưu Tập
                </a>
                <partial name="_LoginPartialMobile" />
            </div>
        </nav>
    </header>

    @{
        var area = ViewContext.RouteData.Values["area"]?.ToString();
    }

    @if (area == "Admin" && User.IsInRole("Admin"))
    {
        <div class="container mx-auto p-6">
            <div class="flex flex-col md:flex-row gap-8">
                <!-- Admin Sidebar -->
                <aside class="md:w-64 flex-shrink-0">
                    <div class="bg-white p-4 rounded-lg shadow-md">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">Management</h3>
                        <nav class="space-y-2">
                            <a asp-area="Admin" asp-page="/Cars/Index" class="flex items-center px-4 py-2 text-gray-700 rounded-md hover:bg-gray-100 transition-colors">
                                <i class="fas fa-car w-6 text-center mr-3"></i> Cars
                            </a>
                            <a asp-area="Admin" asp-page="/Orders/Index" class="flex items-center px-4 py-2 text-gray-700 rounded-md hover:bg-gray-100 transition-colors">
                                <i class="fas fa-receipt w-6 text-center mr-3"></i> Orders
                            </a>
                            <a asp-area="Admin" asp-page="/TestDrives/Index" class="flex items-center px-4 py-2 text-gray-700 rounded-md hover:bg-gray-100 transition-colors">
                                <i class="fas fa-calendar-check w-6 text-center mr-3"></i> Test Drives
                            </a>
                        </nav>
                    </div>
                </aside>
                <!-- Main Content -->
                <main role="main" class="flex-1">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <div class="container mx-auto p-6">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="bg-gray-800 text-white py-8 mt-12">
        <div class="container mx-auto text-center px-4">
            <p>&copy; 2025 - CarStore - All Rights Reserved</p>
            <p class="text-gray-400 mt-2">Địa chỉ: Nhà Văn hoá Sinh Viên, Khu đô thị Đại học Quốc gia TP.HCM</p>
            <p class="text-gray-400">SĐT: 0868205403</p>
            <div class="mt-4">
                <a href="#" class="text-gray-400 hover:text-white mx-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-gray-400 hover:text-white mx-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-gray-400 hover:text-white mx-2"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <!-- Toast Notification Container -->
    <div id="toast-container" class="toast-container"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SignalR Client Library -->
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.14/dist/browser/signalr.min.js"></script>

    <!-- SignalR Connection Scripts -->
    <script src="~/js/signalr-connection.js" asp-append-version="true"></script>
    <script src="~/js/order-notifications.js" asp-append-version="true"></script>
    <script src="~/js/testdrive-notifications.js" asp-append-version="true"></script>
    <script src="~/js/inventory-updates.js" asp-append-version="true"></script>
    <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            var menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</html>

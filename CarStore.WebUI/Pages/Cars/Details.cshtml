@page "{id:int}"
@model CarStore.WebUI.Pages.Cars.DetailsModel
@{
    ViewData["Title"] = $"{@Model.Car.Brand} {@Model.Car.Model}";
}

<div class="animate__animated animate__fadeIn">
    <!-- Breadcrumb -->
    <nav class="flex mb-6 text-sm">
        <a asp-page="/Index" class="text-blue-600 hover:underline">Trang Chủ</a>
        <span class="mx-2 text-gray-400">/</span>
        <a asp-page="./Index" class="text-blue-600 hover:underline">Bộ Sưu Tập</a>
        <span class="mx-2 text-gray-400">/</span>
        <span class="text-gray-600">@Model.Car.Brand @Model.Car.Model</span>
    </nav>

    <div class="bg-white rounded-2xl shadow-2xl p-6 md:p-10">
        <a asp-page="./Index" class="text-blue-600 hover:text-blue-800 mb-8 inline-flex items-center font-semibold transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>Quay lại danh sách
        </a>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-6">
            <!-- Car Image Gallery -->
            <div class="space-y-4">
                <div class="relative overflow-hidden rounded-xl shadow-lg">
                    <img src="@(Model.Car.ImageUrl ?? "https://via.placeholder.com/800x600")" alt="Image of @Model.Car.Brand @Model.Car.Model" class="w-full h-auto object-cover">
                    <div class="absolute top-4 right-4">
                        @if (Model.Car.Stock > 0)
                        {
                            <span class="bg-green-500 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                                <i class="fas fa-check-circle mr-1"></i>Còn @Model.Car.Stock xe
                            </span>
                        }
                        else
                        {
                            <span class="bg-red-500 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                                <i class="fas fa-times-circle mr-1"></i>Hết hàng
                            </span>
                        }
                    </div>
                </div>
            </div>

            <!-- Car Details -->
            <div class="space-y-6">
                <div>
                    <span class="text-sm font-semibold text-blue-600 bg-blue-50 px-3 py-1 rounded-full">
                        @Model.Car.Brand
                    </span>
                    <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 mt-3 mb-2">@Model.Car.Model</h1>
                    <p class="text-3xl font-bold text-blue-600">@Model.Car.Price.ToString("C0")</p>
                </div>

                <div class="bg-gray-50 rounded-xl p-6">
                    <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-cog mr-2 text-blue-600"></i>Thông Số Kỹ Thuật
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="flex items-start">
                            <i class="fas fa-copyright text-gray-400 mt-1 mr-3"></i>
                            <div>
                                <span class="block text-sm text-gray-500">Hãng xe</span>
                                <span class="font-bold text-gray-800">@Model.Car.Brand</span>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-car text-gray-400 mt-1 mr-3"></i>
                            <div>
                                <span class="block text-sm text-gray-500">Model</span>
                                <span class="font-bold text-gray-800">@Model.Car.Model</span>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-calendar-alt text-gray-400 mt-1 mr-3"></i>
                            <div>
                                <span class="block text-sm text-gray-500">Năm sản xuất</span>
                                <span class="font-bold text-gray-800">@Model.Car.Year</span>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-warehouse text-gray-400 mt-1 mr-3"></i>
                            <div>
                                <span class="block text-sm text-gray-500">Tồn kho</span>
                                <span class="font-bold text-gray-800">@(Model.Car.Stock ?? 0) xe</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="border-t pt-6">
                    <h3 class="text-xl font-bold text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-blue-600"></i>Mô Tả Chi Tiết
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        @Model.Car.Description
                    </p>
                </div>

                <!-- Action Buttons -->
                <div class="space-y-3 pt-6">
                    @if (Model.Car.Stock > 0)
                    {
                        <a asp-page="./Order" asp-route-id="@Model.Car.CarId" class="block w-full text-center bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
                            <i class="fas fa-shopping-cart mr-2"></i> Đặt Mua Ngay
                        </a>
                        <a asp-page="./TestDrive" asp-route-id="@Model.Car.CarId" class="block w-full text-center bg-white border-2 border-blue-600 text-blue-600 hover:bg-blue-50 font-bold py-4 px-6 rounded-xl transition-all duration-300 shadow-md hover:shadow-lg">
                            <i class="fas fa-steering-wheel mr-2"></i> Đăng Ký Lái Thử
                        </a>
                    }
                    else
                    {
                        <div class="bg-red-50 border-2 border-red-200 text-red-700 p-4 rounded-xl text-center">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            Xe hiện tại đã hết hàng. Vui lòng liên hệ để được tư vấn.
                        </div>
                    }
                </div>

                <!-- Contact Info -->
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl p-6 mt-6">
                    <h4 class="font-bold text-gray-800 mb-3">
                        <i class="fas fa-phone-alt mr-2 text-blue-600"></i>Cần hỗ trợ?
                    </h4>
                    <p class="text-gray-600 text-sm mb-2">Hotline: <a href="tel:0868205403" class="text-blue-600 font-semibold hover:underline">0868 205 403</a></p>
                    <p class="text-gray-600 text-sm">Địa chỉ: Nhà Văn hoá Sinh Viên, Khu đô thị Đại học Quốc gia TP.HCM</p>
                </div>
            </div>
        </div>
    </div>
</div>

@page "{id:int}"
@model CarStore.WebUI.Pages.Cars.TestDriveModel
@{
    ViewData["Title"] = "Book a Test Drive";
}

<div class="max-w-4xl mx-auto animate__animated animate__fadeIn">
    <div class="bg-white rounded-lg shadow-xl p-6 md:p-10">
        <div class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800">Book a Test Drive</h1>
            <p class="text-gray-600">Experience the performance and comfort of your chosen car.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
            <!-- Car Info -->
            <div class="bg-gray-50 p-6 rounded-lg border">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">@Model.Car.Brand @Model.Car.Model</h2>
                <img src="@(Model.Car.ImageUrl ?? "https://via.placeholder.com/400x250")" alt="Image of @Model.Car.Brand @Model.Car.Model" class="w-full h-auto object-cover rounded-md shadow-sm mb-4">
                <div class="flex justify-between items-center text-lg">
                    <span class="text-gray-600">Model Year:</span>
                    <span class="font-semibold text-blue-600">@Model.Car.Year</span>
                </div>
            </div>

            <!-- Test Drive Form -->
            <div>
                <form method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert"></div>
                    <input type="hidden" asp-for="Input.CarId" />

                    <div>
                        <label asp-for="Input.ScheduleDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.ScheduleDate" type="date" class="mt-1 block w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Input.ScheduleDate" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Input.Note" class="block text-sm font-medium text-gray-700 mb-1">Additional Notes (Optional)</label>
                        <textarea asp-for="Input.Note" rows="4" class="mt-1 block w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
                        <span asp-validation-for="Input.Note" class="text-sm text-red-600"></span>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-4 pt-4">
                        <button type="submit" class="flex-1 text-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
                           <i class="fas fa-calendar-check mr-2"></i> Schedule Now
                        </button>
                        <a asp-page="./Details" asp-route-id="@Model.Car.CarId" class="flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-6 rounded-lg transition duration-300">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
